<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bigbase-assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/resources/bigbase</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>	
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.apache.hadoop:hadoop-aws:*</include>
		<!--include>com.esotericsoftware.kryo:kryo5:jar:5.3.0</include-->
                <include>org.bigbase:row-cache:jar:*</include>
                <include>org.bigbase:sidecar:jar:*</include>
                <include>org.bigbase:carrot-cache:jar:*</include>
                <include>org.apache.commons:commons-lang3:*</include>
                <include>com.amazonaws:aws-java-sdk-bundle:*</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes></includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
